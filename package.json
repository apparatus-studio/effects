{
  "private": true,
  "description": "Apparatus Effects",
  "workspaces": [
    "packages/@apparatus/effects/*"
  ],
  "devDependencies": {
    "@apparatus/meta-start-preset": "^0.2.0",
    "@nextools/eslint-config": "^0.1.2",
    "@nextools/typescript-config": "^0.1.0",
    "eslint": "^6.1.0",
    "react-native": "0.62.3",
    "typescript": "^3.8.3"
  },
  "start": {
    "file": "tasks/",
    "auto": {
      "shouldMakeGitTags": true,
      "shouldWriteChangelogFiles": true
    }
  },
  "auto": {
    "bump": {
      "initialType": "minor",
      "zeroBreakingChangeType": "minor"
    },
    "npm": {
      "publishSubDirectory": "build",
      "access": "public"
    },
    "prefixes": {
      "major": "💥",
      "minor": "🌱",
      "patch": "🐞",
      "publish": "📦",
      "initial": "🐣",
      "cleanup": "🧹",
      "lint": "🚷",
      "test": "👾",
      "docs": "📝",
      "refactor": "🛠",
      "wip": "🚧",
      "screenshots": "📸",
      "dependencies": "♻️"
    },
    "commit": {
      "major": "Breaking Change",
      "minor": "New feature",
      "patch": "Bugfix",
      "initial": "Initial",
      "cleanup": "Cleanup",
      "lint": "Lint",
      "test": "Test",
      "docs": "Docs",
      "refactor": "Refactor",
      "wip": "Work in progress",
      "screenshots": "Snapshots / Screenshots",
      "dependencies": "Dependencies"
    }
  },
  "eslintConfig": {
    "extends": "@nextools/eslint-config"
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ],
  "renovate": {
    "commitMessagePrefix": "♻️",
    "commitMessageAction": "update",
    "commitMessageTopic": "{{depName}}",
    "ignoreDeps": [
      "gradle",
      "react",
      "react-dom",
      "react-test-renderer"
    ]
  },
  "engines": {
    "node": ">=10.13.0"
  }
}